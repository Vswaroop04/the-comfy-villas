// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum userRoles {
  Admin
  Resident
}

model User {
  id       String    @id @default(cuid())
  name     String?
  email    String?   @unique
  role     userRoles @default(Resident)
  password String?
  phone    Int?      @unique
  ratings  Ratings[]
  reviews Reviews[]
}

model Listing {
  id           String   @id @default(cuid())
  name          String
  rank              Int      @default(autoincrement())
  fullImageUrl      String?
  thumbnailImageUrl String?
  Beds              Int?
  Bathrooms         Int?
  Price             Float?
  amenities         String[]
  location          String?
  ratings           Ratings[]
  reviews           Reviews[]
  appointments      Appointments[]
}

model Ratings {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  listingId        String
  listing          Listing  @relation(fields: [listingId], references: [id])
  amenitiesRatings Float
  managementRatings Float
  serviceRatings   Float
}

model Reviews {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  listingId        String
  listing          Listing  @relation(fields: [listingId], references: [id])
  review  String

}


model Appointments {
  id       String    @id @default(cuid())
  name     String?
  email    String?   @unique
  phone    Int?      @unique
  listingId        String
  listing          Listing  @relation(fields: [listingId], references: [id])
}

